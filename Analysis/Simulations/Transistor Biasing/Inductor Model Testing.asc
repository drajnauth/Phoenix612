TEXT 816 -496 Left 2 !.param L 100u\n.param RL 50\n.param Rds 2\n.param Vgs 2.1\n.param BM1 3\n.param Vg 2.5\n.opt plotwinsize=0\n \n.meas TRAN Vccr RMS V(Vcc)\n.meas TRAN iq FIND I(Lrfc) WHEN V(Vg)=BM1 td=100n\n.meas TRAN ts FIND time WHEN V(Vg)=BM1 td=3u fall=1\n.meas TRAN tf FIND time WHEN Ix(M1:D)=iq td=3u fall=1\n.meas TRAN i0 FIND I(Lrfc) WHEN time=ts\n;;;;;;;;;;;;;;;;;;;;;;;;;\n.meas TRAN Vdi FIND V(Vd) WHEN time=ts*0.99999\n.meas TRAN Vdf FIND V(Vd) WHEN time=tf*0.99999\n.meas TRAN Ii FIND Ix(M1:D) WHEN time=ts*0.99999\n.meas TRAN If FIND Ix(M1:D) WHEN time=tf*0.99999\n.meas TRAN Lii FIND I(Lrfc) WHEN time=ts*0.99999\n.meas TRAN Lif FIND I(Lrfc) WHEN time=tf*0.99999\n \n.meas TRAN dt PARAM (tf-ts)\n.meas TRAN dli PARAM ABS (LIf-LIi)\n.meas TRAN di PARAM ABS (If-Ii)\n;;;;;;;;;;;;;;;;;;;;;;;;;\n.meas TRAN slope PARAM (Vccr-Vdi)/L\n.meas TRAN intercept PARAM i0\n.meas TRAN Icurrent PARAM slope*dt+intercept \n.meas TRAN Vmax PARAM L*dLi/dt+Vccr\n;;;;;;;;;;;;;;;;;;;;;;;;;;; \n.meas TRAN Imax MAX I(Rout)\n.meas TRAN Imin MIN I(Rout)\n.meas TRAN Ipp PARAM Imax-Imin\n.meas TRAN Vdmax MAX V(Vd)\n.meas TRAN Vdmin MIN V(Vd)\n.meas TRAN Vdpp PARAM Vdmax-Vdmin\n.meas TRAN ILmax MAX I(Lrfc)\n.meas TRAN ILmin MIN I(Lrfc)\n.meas TRAN ILpp PARAM ILmax-ILmin
